<?xml version="1.0" encoding="utf-8"?><!--TODO move values to resources-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StockItemTile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stock_list_item_ticker"
        style="@style/StockListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        tools:text="ABCD" />


    <TextView
        android:id="@+id/stock_list_item_price"
        style="@style/StockListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/stock_list_item_price_change"
        tools:text="150.51" />

    <TextView
        android:id="@+id/stock_list_item_price_change"
        style="@style/StockListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:text="10.00"
        android:textColor="@android:color/white"
        android:background="@drawable/change_green"
        />


</RelativeLayout>